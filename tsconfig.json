{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2015", "dom"
        ],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": false,
        "sourceMap": false,
        "outDir": "build",
        "pretty": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}